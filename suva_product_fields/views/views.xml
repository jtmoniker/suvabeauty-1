<odoo>
  <data>

    <record model="ir.ui.view" id="suva_product_template_form">
      <field name="name">suva.product.template.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="limited_edition"/>
          <field name="global_category"/>
          <field name="global_subcategory"/>
          <field name="country_of_origin"/>
        </xpath>
        <xpath expr="//group[@name='group_lots_and_weight']" position="attributes">
          <attribute name="string">Odoo Logistics</attribute>
        </xpath>
        <xpath expr="//group[@name='group_lots_and_weight']" position="before">
          <group colspan="2" string="Custom Logistics">
            <group colspan="1" col="1">
              <group string="Density">
                <label for="gml_density"/>
                <div class="o_row" name="gml_density">
                  <field name="gml_density"/>
                  <span>g/ml</span>
                </div>
                <label for="oz_density"/>
                <div class="o_row" name="oz_density">
                  <field name="gml_density"/>
                  <span>oz/fl. oz</span>
                </div>
              </group>
              <group string="Weight">
                <label for="g_weight"/>
                <div class="o_row" name="g_weight">
                  <field name="g_weight"/>
                  <span>g</span>
                </div>
                <label for="oz_weight"/>
                <div class="o_row" name="oz_weight">
                  <field name="oz_weight"/>
                  <span>oz</span>
                </div>
                <label for="lbs_weight"/>
                <div class="o_row" name="lbs_weight">
                  <field name="lbs_weight"/>
                  <span>lbs</span>
                </div>
              </group>
            </group>
            <group colspan="1" col="1">
              <group string="Dimensions (cm)">
                <label for="cm_length"/>
                <div class="o_row" name="cm_length">
                  <field name="cm_length"/>
                  <span>cm</span>
                </div>
                <label for="cm_width"/>
                <div class="o_row" name="cm_width">
                  <field name="cm_width"/>
                  <span>cm</span>
                </div>
                <label for="cm_height"/>
                <div class="o_row" name="cm_height">
                  <field name="cm_height"/>
                  <span>cm</span>
                </div>
              </group>
              <group string="Dimensions (in)">
                <label for="in_length"/>
                <div class="o_row" name="cm_length">
                  <field name="in_length"/>
                  <span>in</span>
                </div>
                <label for="in_width"/>
                <div class="o_row" name="cm_width">
                  <field name="in_width"/>
                  <span>in</span>
                </div>
                <label for="in_height"/>
                <div class="o_row" name="cm_height">
                  <field name="in_height"/>
                  <span>in</span>
                </div>
              </group>
            </group>
          </group>
        </xpath>
      </field>
    </record>

    <record id="suva_view_warehouse_tree" model="ir.ui.view">
      <field name="name">suva.view.warehouse.tree</field>
      <field name="model">stock.warehouse</field>
      <field name="inherit_id" ref="stock.view_warehouse_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="before">
          <field name="sequence" widget="handle"/>
        </xpath>
      </field>
    </record>

    <record id="suva_view_delivery_carrier_form" model="ir.ui.view">
      <field name="name">suva.view.delivery.carrier.form</field>
      <field name="model">delivery.carrier</field>
      <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
      <field name="arch" type="xml">
        <!-- <xpath expr="//field[@name='country_ids']" position="before">
          <field name="country_group_ids" widget="many2many_tags"/>
        </xpath> -->
        <xpath expr="//field[@name='fixed_price']" position="before">
          <field name="currency_id"/>
        </xpath>
        <xpath expr="//field[@name='price_rule_ids']" position="before">
          <field name="currency_id"/>
        </xpath>
      </field>
    </record>

    <record id="suva_view_order_form" model="ir.ui.view">
      <field name="name">suva.view.order.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button name="" type="action" class="oe_stat_button" icon="fa-balance-scale">
            <field name="total_weight" widget="statinfo" string="Weight (kg)"/>
          </button>
        </xpath>
      </field>
    </record>

    <record id="sale_coupon_suva_fields" model="ir.ui.view">
      <field name="name">sale.coupon.suva.fields</field>
      <field name="model">sale.coupon.program</field>
      <field name="inherit_id" ref="sale_coupon.sale_coupon_program_view_form_common"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='rule_products_domain']" position="after">
          <field name="currency_id"/>
        </xpath>
      </field>
    </record>
   
  </data>
</odoo>
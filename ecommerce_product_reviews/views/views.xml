<odoo>
  <data>

    <record model="ir.ui.view" id="res_config_settings_view_form">
      <field name="name">ecommerce.review.config.settings</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='sale_checkout_settings']" position="after">
          <h2>Reviews Management</h2>
                <div class="row mt16 o_settings_container" id="ecommerce_product_reviews">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Review Publishing</span>
                            <div class="text-muted">
                                Automatically approve all new reviews or require manual intervention
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label class="o_light_label col-lg-3" for="pt_review_checkpoint"/>
                                    <field name="pt_review_checkpoint"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Review Notification</span>
                            <div class="text-muted">
                               Select the sale team() that you want to automatically assign to new reviews.
                            </div>
                            <div class="content-group" >
                                <div class="row mt16">
                                    <label for="pt_review_team_ids" string="Sale Team(s)" class="col-lg-4 o_light_label"/>
                                    <field name="pt_review_team_ids" class="oe_inline"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="ecommerce_review_tree">
      <field name="name">ecommerce.review.tree</field>
      <field name="model">product.template.review</field>
      <field name="arch" type="xml">
        <tree>
          <field name="product_tmpl_id"/>
          <field name="name"/>
          <field name="rating"/>
          <field name="review_date"/>
          <field name="partner_id"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="ecommerce_review_form">
      <field name="name">ecommerce.review.form</field>
      <field name="model">product.template.review</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="review_in_queue" type="object" string="Put in Queue" class="oe_highlight" attrs="{'invisible': [('state', '!=', '1_new')]}"/>
            <button name="approve_review" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': [('state','in',['1_new', '3_approved'])]}"/>
            <button name="reject_review" type="object" string="Reject" attrs="{'invisible': [('state','in',['1_new', '4_rejected'])]}"/>
            <button name="review_in_queue" type="object" string="Put Back in Queue" attrs="{'invisible': ['|', ('state','=', '1_new'), ('state','=','2_in_review')]}"/>
            <field name="state" widget="statusbar" clickable="True"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
              </button>
            </div>
            <h1><field name="name"/></h1>
            <group col="2">
              <group colspan="1">
                <field name="product_tmpl_id"/>
                <field name="partner_id"/>
                <field name="review_date"/>
                <field name="rating"/>
              </group>
              <group colspan="1">
                <field name="image" widget="image"/>
              </group>
              <group colspan="2">
                <field name="body"/>
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    
    <record model="ir.actions.act_window" id="product_template_reviews_action">
      <field name="name">Ecommerce Product Reviews</field>
      <field name="res_model">product.template.review</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'group_by':'state'}</field>
    </record>

    <menuitem id="product_template_reviews" name="Reviews" parent="website_sale.menu_catalog" sequence="100" action="ecommerce_product_reviews.product_template_reviews_action" groups="website.group_website_designer"/>

  </data>
</odoo>
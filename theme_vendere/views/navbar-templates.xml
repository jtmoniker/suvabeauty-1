<odoo>
    <data>

        <!-- Navbar Templates -->

        <template id="navbar_logo_center" name="Center Logo" inherit_id="website.layout" priority="18">
            <xpath expr="//div[@id='wrapwrap']/header/nav" position="replace">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <t t-set="website_sale_order" t-value="website.sale_get_order()" />
                        <div class="container">

                            <!-- Collapsed, top left menu of header -->

                            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#top_menu_collapse">
                                <i class="fa fa-bars"></i>
                            </button>
                            <div class="nav navbar-nav d-lg-none navbar-user">
                                <a t-attf-href="{{'/web/login' if user_id._is_public() else '/my/home'}}">
                                    <i class="fa fa-user"></i>
                                </a>
                            </div>

                            <!-- Centered logo -->

                            <a href="/" class="navbar-brand logo">
                                <img class="logo-lg d-none d-md-inline-block" t-att-src="'/logo.png?company=%s' % res_company.id" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                                <img class="logo-sm d-md-none" t-att-src="'/logo.png?company=%s' % res_company.id" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                            </a>

                            <!-- Collapsed, top right menu of header -->

                            <ul id="nav-right-sm" class="nav navbar-nav text-right navbar-right d-lg-none">
                                <li class="nav-item">
                                    <a href="#" class="nav-link search-link">
                                        <i class="fa fa-search"></i>
                                    </a>
                                </li>
                                <li id="my_cart" t-attf-class="nav-item">
                                    <a href="/shop/cart" class="nav-link">
                                        <i class="fa fa-shopping-bag"></i>
                                        <span>(<t t-esc="website_sale_order.cart_quantity" />)</span>
                                    </a>
                                </li>
                            </ul>

                            <!-- Main navbar navigation menu -->

                            <div class="collapse navbar-collapse" id="top_menu_collapse">
                                <ul class="nav navbar-nav navbar-left text-left d-none d-lg-flex" id="top_menu">
                                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                        <t t-call="website.submenu">
                                            <t t-set="item_class" t-value="'nav-item'"/>
                                            <t t-set="link_class" t-value="'nav-link'"/>
                                            <t t-set="has_mega" t-value="submenu.has_mega"/>
                                        </t>
                                    </t>
                                </ul>
                                <ul class="nav navbar-nav navbar-left text-left d-lg-none" id="top_menu">
                                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                        <t t-call="website.submenu">
                                            <t t-set="item_class" t-value="'nav-item'"/>
                                            <t t-set="link_class" t-value="'nav-link'"/>
                                            <t t-set="has_mega" t-value="submenu.has_mega"/>
                                        </t>
                                    </t>
                                    <li class="nav-item js_usermenu" t-if="not user_id._is_public()">
                                        <a id="o_logout" class="nav-link" t-attf-href="/web/session/logout?redirect=/" role="menuitem">LOGOUT</a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Right menu for uncollapsed navbar -->

                            <ul id="nav-right-lg" class="nav navbar-nav text-right navbar-right d-none d-lg-flex">
                                <li groups="base.group_public" class="nav-item">
                                    <a t-attf-href="/web/login" class="nav-link">
                                        <i class="fa fa-user"></i>
                                        MY ACCOUNT
                                    </a>
                                </li>
                                <li class="nav-item dropdown" t-ignore="true" t-if="not user_id._is_public()">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                        <span t-esc="user_id.name[:23].upper() + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name.upper()"/>
                                    </a>
                                    <div class="dropdown-menu js_usermenu" role="menu">
                                            <a href="/my/home" role="menuitem" class="dropdown-item">MY ACCOUNT</a>
                                            <a id="o_logout" class="dropdown-item" t-attf-href="/web/session/logout?redirect=/" role="menuitem">LOGOUT</a>
                                    </div>
                                </li>
                                <li class="nav-item divider"/>
                                <li class="nav-item">
                                    <a class="nav-link search-link">
                                        <i class="fa fa-search"></i>
                                        SEARCH
                                    </a>
                                </li>
                                <li class="nav-item divider"/>
                                <li id="my_cart" t-attf-class="nav-item">
                                    <a href="/shop/cart" class="nav-link">
                                        <i class="fa fa-shopping-bag"></i>
                                        BAG <span>(<t t-esc="website_sale_order.cart_quantity" />)</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                    <div class="search-dropdown container">
                        <form action="/shop" method="get" class="o_website_sale_search">
                            <t t-call="website.website_search_box" />
                        </form>
                    </div>
            </xpath>
        </template>

        <!-- Editable promotional banner above header -->

        <template id="navbar-banner" customize_show="True" inherit_id="navbar_logo_center" name="Promotional Banner" active="True">
            <xpath expr="//header" position="before">
                <section id="vendere_banner" class="container-fluid d-none d-sm-flex">
                    <p>Write your promotional message here.</p>
                </section>
            </xpath>
        </template>

    </data>
</odoo>
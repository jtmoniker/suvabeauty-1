<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Product Page -->
    <template id="product_attribute_image_variants" inherit_id="sale.variants">
        <xpath expr="//t/li/t[last()]" position="after">
            <t t-if="variant_id.attribute_id.type == 'image' and variant_id.attribute_id.link_to_product">
                <br/>

                <ul t-att-data-attribute_id="variant_id.attribute_id.id" class="image_attrs list-inline" style="margin-left: 0px; display: inline-flex; flex-direction: row; flex-wrap: wrap;">
                    
                    <t t-set="match_exists" t-value="False"/>
                    <t t-foreach="variant_id.product_template_value_ids" t-as="value_id">
                        <t t-if="product.id == value_id.product_attribute_value_id.linked_product.id">
                            <t t-set="match_exists" t-value="True"/>
                        </t>
                    </t>

                    <li t-foreach="variant_id.product_template_value_ids" t-as="value_id" class="list-inline-item" t-attf-data-name="#{value_id.product_attribute_value_id.linked_product.name}">

                        <!-- Check input if parameters are met -->
                        
                        <t t-set="checked" t-value="False"/>
                        <t t-if="match_exists">
                            <t t-if="value_id.product_attribute_value_id.linked_product.id == product.id">
                                <t t-set="checked" t-value="True"/>
                            </t>
                        </t>
                        <t t-else="">
                            <t t-if="first_possible_combination[variant_id_index] == value_id">
                                <t t-set="checked" t-value="True"/>
                            </t>
                        </t>

                        <!-- Attribute Image and Link --> 

                        <a t-attf-href="/shop/product/#{value_id.product_attribute_value_id.linked_product.id}">
                            <img t-attf-src="/web/image/product.attribute.value/#{value_id.product_attribute_value_id.id}/image/50x50" class="img"/>
                        </a>

                        <!-- Hidden radio Input for compatibility with Odoo 12 -->

                        <t t-if="checked">
                            <input type="radio"
                            t-attf-class="js_variant_change #{variant_id.attribute_id.create_variant} d-none"
                            t-att-checked="True"
                            t-att-name="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"
                            t-att-value="value_id.id"
                            t-att-title="value_id.name"
                            t-att-data-value_id="value_id.product_attribute_value_id.id"
                            t-att-data-value_name="value_id.name"
                            t-att-data-attribute_name="value_id.attribute_id.name"
                            t-att-data-is_custom="value_id.is_custom"/>
                        </t>
                        <t t-else="">
                            <input type="radio"
                            t-attf-class="js_variant_change #{variant_id.attribute_id.create_variant} d-none"
                            t-att-name="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"
                            t-att-value="value_id.id"
                            t-att-title="value_id.name"
                            t-att-data-value_id="value_id.product_attribute_value_id.id"
                            t-att-data-value_name="value_id.name"
                            t-att-data-attribute_name="value_id.attribute_id.name"
                            t-att-data-is_custom="value_id.is_custom"/>
                        </t>
                        
                    </li>

                </ul>
            </t>
            <t t-if="variant_id.attribute_id.type == 'image' and not variant_id.attribute_id.link_to_product">
                <ul t-att-data-attribute_id="variant_id.attribute_id.id" class="list-inline">
                    <t t-set="inc" t-value="0"/>
                    <li t-foreach="variant_id.product_template_value_ids" t-as="value_id" class="list-inline-item" t-attf-data-name="#{value_id.product_attribute_value_id.linked_product.name}">
                        <label t-attf-class="css_attribute_color #{'active' if not inc else ''}" t-att-title="value_id.name">
                            <input type="radio"
                            t-attf-class="js_variant_change #{variant_id.attribute_id.create_variant} d-none"
                            t-att-checked="first_possible_combination[variant_id_index] == value_id"
                            t-att-name="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"
                            t-att-value="value_id.id"
                            t-att-title="value_id.name"
                            t-att-data-value_id="value_id.product_attribute_value_id.id"
                            t-att-data-value_name="value_id.name"
                            t-att-data-attribute_name="value_id.attribute_id.name"
                            t-att-data-is_custom="value_id.is_custom">
                                <img t-attf-src="/web/image/product.attribute.value/#{value_id.product_attribute_value_id.id}/image/80x60" class="img" style="margin-right:30px;"/>
                            </input>
                        </label>
                        <t t-set="inc" t-value="inc+1"/>
                    </li>
                </ul>
            </t>
        </xpath>
        <xpath expr="//strong[@class='attribute_name']" position="after">: <span/></xpath>
    </template>

    <template id="suva_products_attributes" inherit_id="website_sale.products_attributes">
        <xpath expr="//li" position="attributes">
            <attribute name="t-if">a.type != 'image' and a.value_ids and len(a.value_ids) &gt; 1</attribute>
        </xpath>
    </template>

